# Copia questo file in .env e modifica i valori
# cp env.example .env

# LiveKit Configuration
# Per connessioni dalla rete locale, usa l'IP della tua macchina:
# Esempio: LIVEKIT_URL=ws://192.168.1.100:7880
# Se lasci localhost o 0.0.0.0, il server rileverà automaticamente l'IP
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret_dev_key_change_in_production

# IP del server (opzionale - se non impostato viene rilevato automaticamente)
# Utile se hai più interfacce di rete e vuoi specificare quale usare
# Esempio: SERVER_IP=192.168.1.100
SERVER_IP=

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gpt-oss

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_LANGUAGE=it
WHISPER_DEVICE=cpu

# Default TTS Engine (piper, coqui, edge, kokoro, vibevoice, chatterbox)
DEFAULT_TTS=piper

# Piper TTS Configuration
PIPER_MODEL=it_IT-riccardo-x_low
PIPER_SPEAKER=0

# Edge TTS Configuration
EDGE_VOICE=it-IT-DiegoNeural

# Coqui TTS Configuration
COQUI_MODEL=tts_models/it/mai_female/glow-tts

# Kokoro TTS Configuration
KOKORO_VOICE=it_sara

# VibeVoice TTS Configuration (Microsoft)
# Modelli: "realtime" (streaming, bassa latenza) o "longform" (multi-speaker, alta qualità)
VIBEVOICE_MODEL=realtime
# Lingua: it, en, zh, es, fr, de
VIBEVOICE_LANGUAGE=it
# Speaker ID: speaker_1, speaker_2, speaker_3, speaker_4
VIBEVOICE_SPEAKER=speaker_1
# Velocità voce: 0.5-2.0 (1.0 = normale)
VIBEVOICE_SPEED=1.0
# GPU CUDA: true per usare GPU, false per CPU (GPU molto più veloce!)
VIBEVOICE_GPU=true

# Chatterbox TTS Configuration (Resemble AI)
# Modelli: "standard" o "multilingual" (23 lingue supportate)
CHATTERBOX_MODEL=multilingual
# Lingua: it, en, es, fr, de, ja, ko, zh, ar, pt, ru, etc.
CHATTERBOX_LANGUAGE=it
# Device: auto (rileva automaticamente), cuda, cpu, mps
CHATTERBOX_DEVICE=auto
# Emotion control - Exaggeration: 0.0-1.0 (opzionale, lascia vuoto per default)
CHATTERBOX_EXAGGERATION=
# Emotion control - CFG Weight (opzionale, lascia vuoto per default)
CHATTERBOX_CFG_WEIGHT=
# Voice cloning - Path al file audio di riferimento per clonare la voce (opzionale)
CHATTERBOX_AUDIO_PROMPT_PATH=

# Server Configuration
WEB_PORT=8080
LOG_LEVEL=INFO









