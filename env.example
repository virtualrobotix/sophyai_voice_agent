# Copia questo file in .env e modifica i valori
# cp env.example .env

# LiveKit Configuration
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret_dev_key_change_in_production

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gpt-oss

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_LANGUAGE=it
WHISPER_DEVICE=cpu

# Default TTS Engine (piper, coqui, edge, kokoro, vibevoice)
DEFAULT_TTS=piper

# Piper TTS Configuration
PIPER_MODEL=it_IT-riccardo-x_low
PIPER_SPEAKER=0

# Edge TTS Configuration
EDGE_VOICE=it-IT-DiegoNeural

# Coqui TTS Configuration
COQUI_MODEL=tts_models/it/mai_female/glow-tts

# Kokoro TTS Configuration
KOKORO_VOICE=it_sara

# VibeVoice TTS Configuration (Microsoft)
# Modelli: "realtime" (streaming, bassa latenza) o "longform" (multi-speaker, alta qualità)
VIBEVOICE_MODEL=realtime
# Lingua: it, en, zh, es, fr, de
VIBEVOICE_LANGUAGE=it
# Speaker ID: speaker_1, speaker_2, speaker_3, speaker_4
VIBEVOICE_SPEAKER=speaker_1
# Velocità voce: 0.5-2.0 (1.0 = normale)
VIBEVOICE_SPEED=1.0
# GPU CUDA: true per usare GPU, false per CPU (GPU molto più veloce!)
VIBEVOICE_GPU=true

# Server Configuration
WEB_PORT=8080
LOG_LEVEL=INFO


